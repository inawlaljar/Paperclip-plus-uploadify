<% title "Photos" %>

<% for photo in @photos %>
  <div class="photo">
    <h3>
      <%= link_to h(photo.name), photo %>
      <%= photo.name %>
    </h3>
    <p>photo.description</p>
    <div class="actions">
      <%= link_to "Edit", edit_photo_path(photo) %> |
      <%= link_to "Destroy", photo, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div>
<% end %>

<p><%= link_to "New Photo", new_photo_path %></p>
